@model List<_1ERParcialPRG3.Models.TableViewModel.mDeptTableViewModel>
@{
    ViewBag.Title = "Consulta Departamentos";
}
<div class="d-flex justify-content-center">
<h2>Departamentos</h2>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-hover">
            <tr id="first-tr" style="background-color: #023877; color:white">
                <th>
                    IdDepartamento
                </th>
                <th>
                    Departamento
                </th>
                <th>
                    Estatus
                </th>
            </tr>
            @foreach(var oElement in Model)
            {
                <tr>
                    <td>
                        @oElement._Id
                    </td>
                    <td>
                        @oElement._DeptName
                    </td>
                    <td>
                        @oElement._ActualStatus
                    </td>
                </tr>
            }
        </table>
    </div>
</div>